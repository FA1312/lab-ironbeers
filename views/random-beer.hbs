
<div class="random-beer-container">
  {{#each responseFromApi}}
    <div class="img-random">
      <img src="{{image_url}}" alt="Oops someone drank the beer and there's no picture for it">
        <div class="titledescription">
          <h2>{{name}}</h2>
          <p>{{description}}<br></p>
          <h3>{{tagline}}</h3>
        </div>
    </div>
    
    
    <div class="pair-random">
      <div class="pair">
        <h3>Food pairing</h3>
        <ul>
        {{#each food_pairing}}
          <li>{{this}}</li>
        {{/each}}
        </ul>
      </div>
      <div class="brewer">
        <p class="brewers-tip"> <strong> Brewer's Tips: <br></strong> <br> {{brewers_tips}}</p>
      </div>
    </div>
  {{/each}}
</div>